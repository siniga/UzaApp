<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cart_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d8d8d8"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/white"
        android:id="@+id/toolbar_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:elevation="24dp">

            <LinearLayout
                android:id="@+id/toolbar_icon"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="Rudi nyuma"
                    android:textColor="#5D6060"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGreyLight" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorGreyLight" />
    </LinearLayout>


    <LinearLayout
        android:layout_below="@id/toolbar_wrapper"
        android:id="@+id/btns_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="5dp">

        <Button
            android:id="@+id/discard_store_btn"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_grey_clear_24"
            android:text="Katisha"
            android:textColor="@color/midd_grey" />

        <Button
            android:id="@+id/save_expense_btn"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableRight="@drawable/ic_baseline_done_green_24"
            android:text="Hifadhi"
            android:textColor="@color/midd_grey" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_below="@+id/btns_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/round_corners"
            android:gravity="center"
     android:paddingBottom="30dp"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">



            <TextView
                android:id="@+id/name_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_input"
                android:layout_marginTop="25dp"
                android:text="Jina la matumizi"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:freezesText="true"
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/round_corners_with_stroke_grey_light"
                android:hint="Ingiza jina la biashara hapa"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/amnt_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_input"
                android:layout_marginTop="25dp"
                android:text="Kiasi cha matumizi"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:layout_marginTop="10dp"
                android:inputType="number"
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/round_corners_with_stroke_grey_light"
                android:hint="Kiasi ulichotumia"
                android:padding="10dp" />

            <TextView
                android:id="@+id/category_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/phone_input"
                android:layout_marginTop="25dp"
                android:text="Aina ya matumizi"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:layout_marginTop="10dp"
                android:drawableRight="@drawable/ic_baseline_keyboard_arrow_right_24"
                android:textSize="18sp"
                android:gravity="center_vertical"
                android:id="@+id/select_category"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/round_corners_with_stroke_grey_light"
                android:hint="Chagua aina ya matumizi"
                android:padding="10dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>