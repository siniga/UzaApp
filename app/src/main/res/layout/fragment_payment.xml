<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e7f0"
    android:orientation="vertical">

    <LinearLayout
        android:padding="15dp"
        android:id="@+id/amount_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/bottom_sheet_bg"
            android:elevation="1dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="50px"
                android:src="@drawable/ic_attach_money_grey_24dp" />

            <TextView
                android:id="@+id/total_amount_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="0.00"
                android:textColor="#cccccc"
                android:textSize="50sp"
                android:textStyle="bold" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jumla Unadai"
                android:textColor="#666666"
                android:textSize="18sp"
                android:textStyle="bold" />


            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.5"
                    android:text="Mteja ametoa"
                    android:textColor="@android:color/black" />

                <EditText
                    android:id="@+id/amount_paid"
                    android:layout_width="1dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.9"
                    android:hint="Amount Paid"
                    android:inputType="number"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/padding_10"
                android:paddingBottom="30dp"
                android:visibility="gone">

                <Button
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="1 k"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="5 k"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="10 k"
                    android:textSize="12sp" />

                <Button
                    android:layout_width="1dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:text="20 k"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:text="Katisha"
            android:textColor="@color/blue" />

        <Button
            android:id="@+id/continue_btn"
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_weight="2"
            android:background="@color/colorPrimary"
            android:text="Endelea"
            android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>