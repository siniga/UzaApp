<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginLeft="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="5dp"
    android:background="@drawable/round_corners_white"
    android:clipToPadding="true"
    android:orientation="horizontal">

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:id="@+id/category_img"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@drawable/ic_cateogry_black_64" />

        <TextView
            android:layout_toRightOf="@+id/category_img"
            android:id="@+id/category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:text="Whisky"
            android:textColor="@android:color/black"
            android:textSize="16sp" />


        <RadioButton
            android:id="@+id/category_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
        />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/category_wrapper"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/category_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="center" />

            <LinearLayout
                android:id="@+id/transparent_frontview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/blue_transparent"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

            <TextView
                android:id="@+id/category_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Whisky"
                android:textColor="@android:color/black"
                android:textSize="10sp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:background="@color/light_grey" />

</RelativeLayout>



